@model apinazi.Models.Cuenta

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cuenta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="biografia" class="control-label"></label>
                <input asp-for="biografia" class="form-control" />
                <span asp-validation-for="biografia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="fecha_creacion" class="control-label"></label>
                <input asp-for="fecha_creacion" class="form-control" type="date" />
                <span asp-validation-for="fecha_creacion" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="musico" /> @Html.DisplayNameFor(model => model.musico)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="foto_Perfil" class="control-label"></label>
                <input asp-for="foto_Perfil" class="form-control" type="file" />
                <span asp-validation-for="foto_Perfil" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="seguidores" class="control-label"></label>
                <input asp-for="seguidores" class="form-control" />
                <span asp-validation-for="seguidores" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="seguidos" class="control-label"></label>
                <input asp-for="seguidos" class="form-control" />
                <span asp-validation-for="seguidos" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="activo" /> @Html.DisplayNameFor(model => model.activo)
                </label>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="privado" /> @Html.DisplayNameFor(model => model.privado)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

